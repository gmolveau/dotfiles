#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset

# source : https://codeberg.org/EvanHahn/dotfiles

if hash pbpaste 2>/dev/null; then
  exec pbpaste
elif hash xclip 2>/dev/null; then
  exec xclip -selection clipboard -o
elif [[ -e /tmp/clipboard ]]; then
  exec cat /tmp/clipboard
else
  echo ''
fi
